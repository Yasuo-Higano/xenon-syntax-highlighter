{
  "name": "xenon-syntax-highlight",
  "displayName": "Xenon Syntax Highlight",
  "description": "Xenon Syntax Highlight",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "publisher": "xenon-team",
  "repository": {
    "type": "git",
    "url": "https://github.com/xenon-team/xenon-syntax-highlight"
  },
  "extensionKind": ["ui", "workspace"],
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:xenon",
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xenon-syntax-highlight.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "xenon-syntax-highlight.checkLanguageId",
        "title": "Xenon: Check Current Language ID"
      }
    ],
    "languages": [
      {
        "id": "xenon",
        "aliases": ["Xenon", "xenon"],
        "extensions": [".xenon"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/xenon-light.png",
          "dark": "./icons/xenon-dark.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "xenon",
        "scopeName": "source.xenon",
        "path": "./syntaxes/xenon.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
